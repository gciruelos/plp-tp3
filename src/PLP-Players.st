Object subclass: #MiniFluxxPlayer	instanceVariableNames: 'name hand table strategy'	classVariableNames: ''	poolDictionaries: ''	category: 'PLP-Players'!!MiniFluxxPlayer methodsFor: 'as yet unclassified'!handSize	^ hand size! !!MiniFluxxPlayer methodsFor: 'as yet unclassified'!hasCards	^ self handSize > 0! !!MiniFluxxPlayer methodsFor: 'as yet unclassified' stamp: 'GT 6/22/2017 01:30'!init: aName withStrat: aStrat	name := aName.	hand := OrderedCollection new.	table := Set new.	strategy := aStrat.! !!MiniFluxxPlayer methodsFor: 'as yet unclassified' stamp: 'GT 6/22/2017 01:30'!meets: aGoal	^ aGoal isMetBy: table! !!MiniFluxxPlayer methodsFor: 'as yet unclassified'!name	^ name! !!MiniFluxxPlayer methodsFor: 'as yet unclassified' stamp: 'GT 6/22/2017 01:31'!pickFrom: aDeck	hand add: aDeck removeFirst.! !!MiniFluxxPlayer methodsFor: 'as yet unclassified' stamp: 'GT 6/22/2017 01:40'!play: aGame"Obtenemos la carta indicada por la estrategia, se la removemos de la mano y la jugamos"	| cardToPlay |	cardToPlay := strategy value: hand value: table value: aGame.	hand remove: cardToPlay.	cardToPlay play: table withGame: aGame.	^ cardToPlay! !!MiniFluxxPlayer methodsFor: 'as yet unclassified' stamp: 'GT 6/22/2017 01:32'!receive: aNumber cardsFrom: aDeck	aNumber timesRepeat: [ self pickFrom: aDeck ]! !!MiniFluxxPlayer methodsFor: 'as yet unclassified'!strategy	^ strategy! !!MiniFluxxPlayer methodsFor: 'as yet unclassified' stamp: 'GT 6/22/2017 01:32'!strategy: aStrat	strategy := aStrat.! !!MiniFluxxPlayer methodsFor: 'as yet unclassified'!table	^ table! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!MiniFluxxPlayer class	instanceVariableNames: ''!!MiniFluxxPlayer class methodsFor: 'as yet unclassified' stamp: 'GT 6/22/2017 01:30'!new: aName withStrat: aStrat	^ super new init: aName withStrat: aStrat! !!MiniFluxxPlayer class methodsFor: 'instance creation' stamp: 'GT 6/22/2017 01:29'!new: aName	^ super